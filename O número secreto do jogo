# O número secreto do jogo
numero_secreto = 15

print("Bem-vindo ao Jogo da Adivinhação!")
print("Tente adivinhar o número secreto entre 1 e 20.")

while True:
    try:
        # Pede o palpite do usuário e converte para inteiro
        palpite = int(input("\nQual é o seu palpite? "))

        # Verifica se o palpite está dentro do limite
        if palpite < 1 or palpite > 20:
            print("Valor inválido! O número deve estar entre 1 e 20.")
            continue  # Volta para o início do laço, pedindo um novo palpite

        # Lógica do jogo
        if palpite > numero_secreto:
            print("O número secreto é menor. Tente novamente!")
        elif palpite < numero_secreto:
            print("O número secreto é maior. Tente novamente!")
        else:
            print("Parabéns! Você acertou o número secreto.")
            break  # Sai do laço quando o palpite está correto
            
    except ValueError:
        print("Entrada inválida! Por favor, digite um número inteiro.")
